        #sendTransaction.modal.fade(tabindex='-1', role='dialog', aria-labelledby='Send Transaction')
            .modal-dialog(role='document')
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') &times;
                        h4#exampleModalLabel.modal-title Send Transaction
                    .modal-body
                        form
                            .form-group
                                label.control-label(for='recipient-name') address &nbsp;
                                span da8562e7abc01a6f0d49a25d144ce6a9d7752a079c5d950ad5a93fd6d623f7fd
                                input#recipient-name.form-control(type='text')

                            .form-group
                                label.control-label(for='message-text') Message:
                                input#transctionSign.form-control(type='password')
                    .modal-footer
                        button.btn.btn-default(type='button', data-dismiss='modal') Close
                        button.btn.btn-primary(type='button') Send Transaction

