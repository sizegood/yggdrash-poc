extends ../layout

block content
    // branch information
    .container
        section
            .row
                .col-md-12
                    h1= branch_name
            .row
                .col-md-12
                    .panel.panel-default
                        .panel-heading
                            h3.panel-title Branch Information
                        .panel-body
                            p
                                h5
                                    span.label.label-info Branch Address
                                    | &nbsp;
                                    span= currency.address
                            p
                                .center-block= currency.description
                            p
                                h5
                                    span.label.label-info YEED
                                    | &nbsp;
                                    span 10,000
                            p
                                h5
                                    span.label.label-info TP
                                    | &nbsp;
                                    span 123

        section
            // self account information
            .row
                .col-md-12
                    .panel.panel-default
                        .panel-heading
                            h3.panel-title Account
                        .panel-body
                            p
                                h4
                                    span.label.label-default address
                                    | &nbsp;
                                    span d04b98f48e8f8bcc15c6ae5ac050801cd6dcfd428fb5f9e65c4e16e7807340fa
                            p
                                h4
                                    span.label.label-default balance
                                    | &nbsp;
                                    span 1234567.12345678
        section
            .row
                .col-md-12
                    .panel.panel-default
                        .panel-heading
                            h3.panel-title Exchange
                        .panel-body
                            form
                                p
                                    .input-group
                                        span.input-group-addon(for='sendto') To
                                        input#sendto.form-control(placeholder="account address")
                                p
                                    .input-group
                                        span.input-group-addon(for='sendvalue') Value
                                        input#sendvalue.form-control(placeholder="Value",min="0",data-bind="value:replyNumber")
                                p
                                    .input-group
                                        span.input-group-addon(for='send-data') data
                                        input#send-data.form-control(placeholder="0x0")
                                p
                                    span#sendbtn.btn.btn-success(data-toggle="modal",data-target="#sendTransaction") Send


        section
            .row
                .col-md-12
                    .panel.panel-default
                        .panel-heading
                            h3.panel-title Branch History
                        .panel-body
