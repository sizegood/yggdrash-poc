extends ../../layout

block content
    // branch information
    .container
        section
            .row
                .col-md-12
                    p
                        h1 Branch Chain
                    p
                        h2= branch.name
                            | &nbsp;Branch
            .row
                .col-md-12
                    .panel.panel-default
                        .panel-heading
                            h2.panel-title Branch Information
                        .panel-body
                            p
                                h5
                                    span.label.label-info
                                        i.fa.fa-location-arrow
                                        | &nbsp;Branch Address
                                    | &nbsp;
                                    span.hash= branch_address
                            p
                                span.label.label-info Branch Name
                                | &nbsp;
                                span= branch.name
                            p
                                span.label.label-info Branch Description
                                | &nbsp;
                                span= branch.meta.description
                            if branch.type != 'immutable'
                                p
                                    h5
                                        span.label.label-info Reputation Score
                                        | &nbsp;
                                        span.number #{sacred[branch_address]}
                                p
                                    h5
                                        span.label.label-info
                                            i.fa.fa-yandex-international
                                            | YEED
                                        | &nbsp;
                                        span #{yeed[branch_address]}

                            p
                                h5
                                    span.label.label-info Branch Type
                                    | &nbsp;
                                    span= branch.type

        section
            // self account information
            .row
                .col-md-12
                    .panel.panel-default
                        .panel-heading
                            h3.panel-title Your Account
                        .panel-body
                            p
                                h4
                                    span.label.label-default address
                                    | &nbsp;
                                    span.hash d04b98f48e8f8bcc15c6ae5ac050801cd6dcfd428fb5f9e65c4e16e7807340fa
                            p

                                ul.list-group
                                    li.list-group-item.active
                                        | ASSET
                                    li.list-group-item
                                        span.hash b76f6a70016a08f70ff5bd2377ceb4e7f112ef39a0eb41e699f9dd437b719706
                                        span.pull-right
                                            a.btn.btn-info.btn-sm
                                                | INFO
                                            a.btn.btn-success.btn-sm
                                                | SELL
                                    li.list-group-item
                                        span.hash  a118a333e35cfa308ef52a5c86b7d322bd946156d3ed0af112416b88a6204229
                                        span.pull-right
                                            a.btn.btn-info.btn-sm
                                                | INFO
                                            a.btn.btn-success.btn-sm
                                                | SELL
